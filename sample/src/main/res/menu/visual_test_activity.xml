<menu xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:ignore="AlwaysShowAction">

    <item
        android:id="@+id/screen_rotation_action"
        android:title="@string/screen_rotation"

        android:icon="@drawable/ic_screen_rotation_black_24dp"
        app:showAsAction="always"/>

    <item
        android:id="@+id/track_change_action"
        android:title="@string/track_change"

        android:icon="@drawable/ic_track_changes_black_24dp"
        app:showAsAction="always"/>

    <item
        android:id="@+id/filter_action"
        android:title="@string/filter"

        android:icon="@drawable/ic_filter_list_black_24dp"
        app:showAsAction="always">

        <menu>

            <group android:checkableBehavior="single">

                <item
                    android:id="@+id/linear_layout_manager_action"
                    android:title="@string/linear_layout_manager"
                    android:checked="true"/>

                <item
                    android:id="@+id/grid_layout_manager_action"
                    android:title="@string/grid_layout_manager"/>

            </group>

        </menu>

    </item>

    <item
        android:id="@+id/insert_action"
        android:title="@string/insert"

        app:showAsAction="never"/>

    <item
        android:id="@+id/remove_action"
        android:title="@string/remove"

        app:showAsAction="never"/>

    <item
        android:id="@+id/move_action"
        android:title="@string/move"

        app:showAsAction="never"/>

    <item
        android:id="@+id/change_all_data_action"
        android:title="@string/change_all_data"

        app:showAsAction="never"/>

    <item
        android:id="@+id/toggle_single_item_action"
        android:title="@string/toggle_single_item"

        app:showAsAction="never"/>

</menu>